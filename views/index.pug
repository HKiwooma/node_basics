extends layouts/main-layout.pug 
block content
    article.card-body
        form(method="POST" action="/thanks")
            div.form-row
                div.col.form-group
                    label(for="") First Name
                    input.form-control(type="text" name="firstName")
                div.col.form-group
                    label(for="") Last Name
                    input.form-control(type="text" name="lastName")
            div.form-group
                label(for="") Email
                input.form-control(type="email" name="emailAddress")
                small.form-text.text-muted We'll never share your email with anyone else.
            .form-group
                label(for="").form-check.form-check-inline
                    input.form-check-input(type="radio", name="gender")
                    small.form-check-label Male
                label(for="").form-check.form-check-inline
                    input.form-check-input(type="radio", name="gender")
                    small.form-check-label Female
            .form-row
                .form-group.col-md-6
                    label(for="") City
                    input.form-control(type="text", name="city")
                form-group.col-md-6
                    label(for="") Country
                    select.form-control(name="country")
                        option(value="") Choose...
                        option(value="") Uzbekistan
                        option(value="") Russia
                        option(value="" selected="") United States
                        option(value="") India
                        option(value="") Afganistan
            .form-group
                label(for="") Create password
                input.form-control(type="password", name="password")
            .form-group
                button.btn.btn-primary.btn-block(type="submit") Register
            div.text-muted
                small By clicking the 'Sign Up' button, you confirm that you accept our
            div.text-muted
                small Terms of use and Privacy Policy.
            .border-top.card-body.text-center  Have an account? 
                a(href="") Log In